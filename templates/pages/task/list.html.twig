{% extends 'base.html.twig' %}

{% block header_img %}<img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">
{% endblock %}

{% block body %}
	<a href="{{ path('new.task') }}" class="btn btn-info pull-right">Créer une tâche</a>
	<div class="row d-flex w-100 gap-3 m-3">
		{% for task in tasks %}
			<div class="col-sm-4 col-lg-4 col-md-4">
				<div class="task-item d-flex flex-column justify-content-center align-content-center w-100 p-4 border rounded">
					<h4>
						<a href="/#">{{ task.title }}</a>
					</h4>
					{# <h4><a href="{{ path('edit.task', {'id' : task.id }) }}">{{ task.title }}</a></h4> #}
					<p>{{ task.content }}</p>
					<small>Créé le
						{{ task.createdAt|date('d/m/Y') }}</small>
				</div>
				<div class="thumbnail">
					<div class="caption">
						<h4 class="pull-right">
							{% if task.isDone %}
								<span class="glyphicon glyphicon-ok"></span>
							{% else %}
								<span class="glyphicon glyphicon-remove"></span>
							{% endif %}
						</h4>
						{# <h4><a href="{{ path('edit.task', {'id' : task.id }) }}">{{ task.title }}</a></h4>
						                    <p>{{ task.content }}</p> #}
					</div>
					<div>
						{# <form action="{{ path('toggle.task', {'id' : task.id }) }}">
						                        <button class="btn btn-success btn-sm pull-right">
						                            {% if not task.isDone %}Marquer comme faite{% else %}Marquer non terminée{% endif %}
						                        </button>
						                    </form>
						                    <form action="{{ path('delete.task', {'id' : task.id }) }}">
						                        <button class="btn btn-danger btn-sm pull-right">Supprimer</button>
						                    </form> #}
					</div>
				</div>
			</div>
		{% else %}
			<div class="alert alert-warning" role="alert">
				Il n'y a pas encore de tâche enregistrée.
				<a href="{{ path('task_create') }}" class="btn btn-warning pull-right">Créer une tâche</a>
			</div>
		{% endfor %}
	</div>
{% endblock %}
